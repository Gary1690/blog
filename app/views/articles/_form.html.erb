
<div class="container">
  <%=form_with model: @article,class:"shadow p-3 m-5 bg-dark text-white rounded", local: true  do |f|%>
    <div class="form-group row">
      <%=f.label :title, class:"col-2 col-form-label"%>
      <div class="col-10">
        <%= f.text_field :title, class:"form-control shadow"%>
      </div>
    </div>
    <div class="form-group row">
      <%=f.label :description,class:"col-2 col-form-label"%>
        <div class="col-10">
          <%= f.text_area :description, rows:10, class:"form-control shadow"%>
        </div>
    </div>
    <div class="form-group row justify-content-md-center">
      <%=f.submit class:"btn btn-outline-light btn-lg shadow"%>
    </div>
  <%end%>
  <div class="row justify-content-md-center mb-5">
    <%= link_to  "[ Cancel and Return to article listing ]", articles_path()  %>
  </div>
</div>