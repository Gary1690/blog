<h1 class="text-center mt-4">Listing all articles</h1>
<div  class="row justify-content-center">
  <div class="col-6">
    <%= link_to  "New Article", new_article_path(), class:"btn btn-primary m-3" %>
  </div>
</div>
<% if @articles.any? %>
  <% @articles.each do |article|%>
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="card m-3 shadow text-center">
          <div class="card-header font-italic">
            by Gary Cordero
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
            <p class="card-text"><%=truncate(article.description,length:100)%></p>
            <%= link_to  "Show", article_path(article), class:"btn btn-outline-info m-1" %>
            <%= link_to  "Edit", edit_article_path(article),class:"btn btn-outline-success m-1" %>
            <%= link_to  "Delete", article_path(article),method: "delete",class:"btn btn-outline-danger m-1", data: {confirm: "Are you sure?"} %>

          </div>
          <div class="card-footer">
            <small>Created <%=time_ago_in_words(article.created_at)%>, Updated <%=time_ago_in_words(article.updated_at)%>  </small>
          </div>
        </div>
      </div>
    </div>
  <%end%>
<%else%>
  <h4>There are no articles yet, try creating one.</h4>
<%end%>


